{
  "name": "angular-auto-import",
  "displayName": "Angular auto import",
  "description": "Automatically suggests and inserts missing Angular component imports based on selectors used in templates.",
  "publisher": "baryshevrs",
  "version": "1.11.2",
  "icon": "img/icon.png",
  "engines": {
    "vscode": "^1.96.2"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "Angular",
    "auto-import",
    "missing imports",
    "Angular component",
    "Angular directive",
    "Angular pipe",
    "refactor",
    "code fix",
    "TypeScript",
    "HTML",
    "VS Code extension",
    "template",
    "NgModule",
    "standalone components",
    "Nx",
    "autocomplete",
    "quick fix"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngx-rock/vscode-angular-auto-import.git"
  },
  "bugs": {
    "url": "https://github.com/ngx-rock/vscode-angular-auto-import/issues"
  },
  "homepage": "https://github.com/ngx-rock/vscode-angular-auto-import#readme",
  "contributes": {
    "commands": [
      {
        "command": "angular-auto-import.reindex",
        "title": "Angular Auto Import: Reindex Project(s)",
        "category": "Angular Auto Import"
      },
      {
        "command": "angular-auto-import.clearCache",
        "title": "Angular Auto Import: Clear Cache",
        "category": "Angular Auto Import"
      },
      {
        "command": "angular-auto-import.showLogs",
        "title": "Show Logs",
        "category": "Angular Auto Import",
        "icon": "$(output)"
      },
      {
        "command": "angular-auto-import.showPerformanceMetrics", 
        "title": "Show Performance Metrics",
        "category": "Angular Auto Import",
        "icon": "$(graph)"
      }
    ],
    "configuration": {
      "title": "Angular Auto Import",
      "properties": {
        "angular-auto-import.projectPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Optional. Absolute path to the Angular project root. If set, overrides workspace folders. If not set, uses open workspace folders."
        },
        "angular-auto-import.index.refreshInterval": {
          "type": "number",
          "default": 60,
          "description": "Interval in minutes for automatically reindexing Angular elements. Set to 0 to disable periodic reindexing."
        },
        "angular-auto-import.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable custom diagnostics for missing directive imports."
        },
        "angular-auto-import.diagnostics.severity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info"
          ],
          "default": "warning",
          "description": "Severity level for missing directive import diagnostics."
        },
        "angular-auto-import.logging.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the logging system."
        },
        "angular-auto-import.logging.level": {
          "type": "string",
          "enum": [
            "DEBUG",
            "INFO",
            "WARN",
            "ERROR",
            "FATAL"
          ],
          "default": "INFO",
          "description": "Set the logging level."
        },
        "angular-auto-import.logging.fileLoggingEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable logging to a file."
        },
        "angular-auto-import.logging.logDirectory": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "The directory where log files will be stored. If not set, a default directory within the extension's storage path will be used."
        },
        "angular-auto-import.logging.rotationMaxSize": {
          "type": "number",
          "default": 5,
          "description": "The maximum size of a log file in megabytes before it is rotated."
        },
        "angular-auto-import.logging.rotationMaxFiles": {
          "type": "number",
          "default": 5,
          "description": "The maximum number of log files to keep."
        },
        "angular-auto-import.logging.outputFormat": {
          "type": "string",
          "enum": [
            "plain",
            "json"
          ],
          "default": "plain",
          "description": "The format of the logs in the output channel."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "copy-test-fixtures": "cp -r src/test/fixtures out/test/",
    "pretest": "pnpm run compile-tests && pnpm run copy-test-fixtures && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "pnpm run check:fix && pnpm run lint:knip && pnpm run check-types",
    "lint:biome": "biome lint --diagnostic-level=error --no-errors-on-unmatched src",
    "lint:knip": "knip",
    "lint:fix": "biome lint --write src",
    "format": "biome format src",
    "format:fix": "biome format --write src",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "test": "vscode-test",
    "vsce:package": "vsce package --no-dependencies",
    "vsce:publish": "vsce publish --no-dependencies",
    "release": "pnpm run vsce:package && pnpm run vsce:publish",
    "docs:build": "rm -rf docs && typedoc"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.19.11",
    "@types/vscode": "^1.96.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "glob": "^11.0.3",
    "knip": "^5.63.0",
    "mocha": "^10.8.2",
    "npm-run-all": "^4.1.5",
    "typedoc": "^0.28.11",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@angular/compiler": "^20.2.3",
    "get-tsconfig": "^4.10.1",
    "ts-morph": "^26.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "oxc-resolver"]
  },
  "packageManager": "pnpm@10.12.3+sha512.467df2c586056165580ad6dfb54ceaad94c5a30f80893ebdec5a44c5aa73c205ae4a5bb9d5ed6bb84ea7c249ece786642bbb49d06a307df218d03da41c317417"
}
